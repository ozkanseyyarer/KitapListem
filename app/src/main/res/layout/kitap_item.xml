<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="5dp"
    android:orientation="horizontal"
    android:background="#FFFFFF"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_width="120dp"
        android:layout_height="150dp"
        android:id="@+id/kitap_item_imageViewKitapResim"
        />
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:orientation="vertical"
        android:layout_height="wrap_content">



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kitap Adı"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:id="@+id/kitap_item_textViewKitapAdi"
            android:textSize="17sp"/>
        <TextView
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kitap Yazari"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:id="@+id/kitap_item_textViewKitapYazari"
            android:textSize="17sp"/>
        <TextView
            android:layout_marginTop="5dp"
            android:ellipsize="end"
            android:maxLines="4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kitap Özeti"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:id="@+id/kitap_item_textViewKitapOzeti"
            android:textSize="17sp"/>
    </LinearLayout>

</LinearLayout>